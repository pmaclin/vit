<div class="col-sm-12 col-sm-offset-0 col-md-12 col-md-offset-0 col-lg-12 col-lg-offset-0">
<% if user_signed_in?  %>

    <h1> Volunteer. Earn. Get Swag. Simple! </h1>
    <h2>Jobs List</h2>
    <% @jobs.each do |job| %>
    <div class="col-sm-12 col-sm-offset-0 col-md-8 col-md-offset-0 col-lg-12 col-lg-offset-0">
      <h3><%= link_to job.title, job %><small> (Job ID# <%= job.id %>001)</small></h3>
      <p>Description: <%= job.description.truncate(120, omission: '...more...') %></p>
      <p>Points Per Hour:<font color="darkblue"> <%= job.value %></font></p>
    </div>

      <% if user_signed_in? and current_user.email == "admin@example.com" %>
        <div class="col-md-8 col-md-offset-0">
          <%= link_to "Delete This Job", job, method: :delete, class: "btn btn-danger", data: { confirm: "Wait! Are you sure you want to delete this job?"} %>
        </div>
      <% end %>

    <% end %>


<% else %>
  <%= render 'welcome_page' %>
<% end %>
</div>
