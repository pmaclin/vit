<!DOCTYPE html>
<html>
<head>
  <title>IJP Volunteer Incentivication Tool (V.I.T.)</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= csrf_meta_tags %>
  <script src="https://use.fontawesome.com/e0a3b57e03.js"></script>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
      <%= link_to "V.I.T. |Beta|", root_path, class:"navbar-brand" %>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user.present? %>
          <li><%= link_to current_user.email, edit_user_registration_path, class:"navbar-brand" %></li>
          <li><%= link_to "My Jobs", myjobs_path, class:"navbar-brand" %></li>
          <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Log In", new_user_session_path %></li>
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
        <% end %>
      </ul>
      <% if user_signed_in? and current_user.email == "admin@example.com" %>
        <%= link_to "Create a Job", new_job_path, class: "navbar-text navbar-link"  %>
      <% end %>
    </div>
  </nav>

  <div class="container">
      <% if alert.present? %>
          <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= alert %>
          </div>
        <% end %>

      <% if notice.present? %>
          <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= notice %>
          </div>
      <% end %>
    <%= yield %>
  </div>

</body>
</html>
